                    <Button x:Name="bt2" Content="&#xA;Коридор" HorizontalAlignment="Left" Height="40" Margin="544,57,0,0" VerticalAlignment="Top" Width="98" Grid.Column="2" Click="bt2_Click"/>
                    <Button x:Name="bt1" Content="&#xA;Зеленка" HorizontalAlignment="Left" Height="40" Margin="26,61,0,0" VerticalAlignment="Top" Width="98" Grid.Column="2" Click="Button_Click"/>
                    <Label x:Name="Lb1_bt1" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="56,57,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.445,0.567"/>
                    <Label x:Name="Lb2_bt2" Content="     " Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="574,57,0,0" VerticalAlignment="Top" Width="61" RenderTransformOrigin="0.445,0.567"/>
