                    <Label Content="Палата" Grid.Column="2" HorizontalAlignment="Left" Height="29" Margin="544,10,0,0" VerticalAlignment="Top" Width="112"/>
                    <Label Content="Больница" Grid.Column="2" HorizontalAlignment="Left" Height="29" Margin="294,10,0,0" VerticalAlignment="Top" Width="112"/>
                    <Button x:Name="bt1_Copy1" Content="&#xA;ЙОД" HorizontalAlignment="Left" Height="40" Margin="26,211,0,0" VerticalAlignment="Top" Width="98" Grid.Column="2" Click="bt1_Copy1_Click"/>
                    <Label x:Name="Lb1_bt1_Copy1" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="56,207,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.445,0.567"/>
                    <Button x:Name="bt1_Copy2" Content="&#xA;Больница №2" HorizontalAlignment="Left" Height="40" Margin="264,211,0,0" VerticalAlignment="Top" Width="98" Grid.Column="2" Click="bt1_Copy2_Click"/>
                    <Label x:Name="Lb1_bt1_Copy2" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="294,207,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.445,0.567"/>
                    <Button x:Name="bt1_Copy3" Content="ВИП" HorizontalAlignment="Left" Height="40" Margin="544,211,0,0" VerticalAlignment="Top" Width="98" Grid.Column="2" Click="bt1_Copy3_Click"/>
                    <Label x:Name="Lb1_bt1_Copy3" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="574,207,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.445,0.567"/>
                    <Button x:Name="bt1_Copy4" Content="&#xA;Бюджетное место" HorizontalAlignment="Left" Height="40" Margin="544,144,0,0" VerticalAlignment="Top" Width="112" Grid.Column="2" Click="bt1_Copy4_Click"/>
                    <Label x:Name="Lb1_bt1_Copy4" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="574,140,0,0" VerticalAlignment="Top" Width="98
                           " RenderTransformOrigin="0.445,0.567"/>
                    <Button Content="&#xA;Поддорожник" Grid.Column="2" HorizontalAlignment="Left" Height="40" Margin="26,144,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click_3"/>
                    <Label x:Name="Lb1_bt1_Copy" Content="" Grid.Column="2" HorizontalAlignment="Left" Height="30" Margin="56,140,0,0" VerticalAlignment="Top" Width="82" RenderTransformOrigin="0.445,0.567"/>
                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
