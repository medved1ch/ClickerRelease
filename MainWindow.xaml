                        <ColumnDefinition Width="103*"/>
                        <ColumnDefinition Width="292*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="pnt" Content="0" HorizontalAlignment="Left" Margin="239,57,0,0" VerticalAlignment="Top" Height="35" Width="234" Grid.Column="1"/>
                    <Label x:Name="Points_per_Click" Content="Label" HorizontalAlignment="Left" Margin="239,97,0,0" VerticalAlignment="Top" Height="35" Width="212" Grid.Column="1"/>
                    <Image HorizontalAlignment="Left" Height="227" Margin="40,161,0,0" VerticalAlignment="Top" Width="484" Source="img/Bra2gjK38LY.jpg" MouseDown="Image_MouseDown" Stretch="Fill" Grid.Column="1"/>
